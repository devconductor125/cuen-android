<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.orquitech.development.cuencaVerde.presentation.views.viewModel.CheckboxItemViewMvvm.ViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/task_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/stard_maintenance"
            style="@style/FormCheckBox"
            android:checked="@={viewModel.program.checked}"
            android:text="@{viewModel.program.name}" />

    </RelativeLayout>

</layout>
