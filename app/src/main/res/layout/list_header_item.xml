<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.orquitech.development.cuencaVerde.presentation.views.viewModel.ListHeaderItemViewMvvm.ViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_header_height"
            android:layout_marginBottom="@dimen/dimen_large"
            android:background="@color/base_blue"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/dimen_large"
            android:paddingStart="@dimen/dimen_large"
            android:text="@{viewModel.text}"
            android:textColor="@color/white"
            android:textSize="@dimen/text_small"
            android:textStyle="bold" />

    </RelativeLayout>

</layout>
